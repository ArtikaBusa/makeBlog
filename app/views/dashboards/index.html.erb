<section class="blog-posts">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="all-blog-posts">
          <div class="row">
            <% @blogs.each do |blog| %>
              <div class="col-lg-12">
                <div class="blog-post">
                  <div class="blog-thumb">
                    <%= image_tag blog.image.present? ? url_for(blog.image) : "vendor/banner-item.jpg", alt: "", size: "730x322"%>
                  </div>
                  <div class="down-content">
                    <span><%= blog.category.titleize %></span>
                    <%= link_to blog_display_path(id: blog.id) do %><h4><%= blog.title %></h4><% end %>
                    <ul class="post-info">
                      <li><a href="#">Admin</a></li>
                      <li><a href="#"><%= blog.created_at.strftime("%b %d, %Y") %></a></li>
                    </ul>
                    <div class="short-details">
                      <%= truncate(strip_tags(blog.content.to_s), length: 350) %>
                    </div>
                    <div class="post-options">
                      <div class="row">
                        <div class="col-6">
                          <ul class="post-tags">
                          </ul>
                        </div>
                        <div class="col-6">
                          <ul class="post-share">
                            <li><i class="fa fa-share-alt"></i></li>
                            <li><%= link_to "Read More", blog_display_path(id: blog.id) %></li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
            <%= paginate @blogs %>
          </div>

        </div>
      </div>
      <div class="col-lg-4">
