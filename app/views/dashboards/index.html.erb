<div class="main-banner header-text">
  <div class="container-fluid">
    <div class="owl-banner owl-carousel">
      <% @blogs_index.each do |blog| %>
        <div class="item">
          <%= image_tag blog.image.present? ? url_for(blog.image) : "vendor/banner-item.jpg", alt: "", size: "382x200"%>
          <div class="item-content">
            <div class="main-content">
              <div class="meta-category">
                <span><%= blog.category.titleize %></span>
              </div>
              <%= link_to blog_display_path(id: blog.id) do %><h4><%= blog.title %></h4><% end %>
              <ul class="post-info">
                <li><a href="#">Admin</a></li>
                <li><a href="#"><%= blog.created_at.strftime("%b %d, %Y") %></a></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

