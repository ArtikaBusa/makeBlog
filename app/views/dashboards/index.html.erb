<div class="main-banner header-text">
  <div class="container-fluid">
    <div class="owl-banner owl-carousel">
      <% @blogs.each do |blog| %>
        <div class="item">
          <%= image_tag url_for(blog.images.first), alt: "", size: "582x503"%>
          <div class="item-content">
            <div class="main-content">
              <div class="meta-category">
                <span><%= blog.category.titleize %></span>
              </div>
              <a href="post-details.html"><h4><%= blog.title %></h4></a>
              <ul class="post-info">
                <li><a href="#">Admin</a></li>
                <li><a href="#"><%= blog.created_at.strftime("%b %d, %Y") %></a></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>

<section class="blog-posts">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="all-blog-posts">
          <div class="row">
            <% @blogs.each do |blog| %>
              <div class="col-lg-12">
                <div class="blog-post">
                  <div class="blog-thumb">
                    <%= image_tag url_for(blog.images.first), alt: ""%>
                  </div>
                  <div class="down-content">
                    <span><%= blog.category.titleize %></span>
                    <a href="post-details.html"><h4><%= blog.title %></h4></a>
